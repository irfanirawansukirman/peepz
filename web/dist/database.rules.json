{
  "rules": {

    "wip": {

      "users": {
        "$userId": {
          ".read": "auth.uid === $userId",
          "rooms": {
            "$roomId": {
              "options": {
                ".read": "auth.uid === $userId",
                ".write": "auth.uid === $userId"
              }
            }
          }
        }
      },

      "rooms": {
        "$room": {

          "members": {
            ".read": "data.child(auth.uid).val() === 'admin'",
            ".write": "data.child(auth.uid).val() === 'admin'"
          },

          "options": {
            ".read": "auth.email.endsWith(data.parent().child('members').child('domain').val()) || data.parent().child('members').child(auth.uid).exists()"
          },

          "wall": {
            ".read": "auth.email.endsWith(data.parent().child('members').child('domain').val()) || data.parent().child('members').child(auth.uid).exists()",
            "$userId": {
              ".write": "(auth.email.endsWith(data.parent().parent().child('members').child('domain').val()) || data.parent().parent().child('members').child(auth.uid).exists()) && auth.uid === $userId"
            }
          }

        }
      }
    }

  }
}
