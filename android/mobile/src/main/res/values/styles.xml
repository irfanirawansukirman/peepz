<resources>

    <style name="Peepz" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="peepzToolbarDefStyle">@style/Peepz.Toolbar</item>
        <item name="actionMenuTextColor">@color/purple_text</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Peepz.Fab" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <!--AppCompat's Toolbar ignores any `android:` attrs that are related to the action bar, on any API level-->
    <style name="Peepz.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item> <!-- this should be forced in the class? -->
        <item name="android:background">@android:color/transparent</item>
        <item name="logo">@drawable/peepz_appbar_icon</item>
        <item name="logoDescription">@string/app_name</item>
        <item name="contentInsetStart">24dp</item>
    </style>

    <style name="Peepz.SignIn" />

    <style name="Peepz.SignIn.Button">
        <item name="android:background">@drawable/sign_in_button_background</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textFont">montserratRegular</item>
    </style>

</resources>
